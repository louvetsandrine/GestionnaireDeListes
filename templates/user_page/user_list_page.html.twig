{% extends 'base.html.twig' %}

{% block header %}
    {% include '_navbar.html.twig' %}
{% endblock %}

{% block body %}

    <div class="row justify-content-center align-items-center block my-5">
        <div class=" col-12 justify-content-center align-items-center">
            <p class="h2 pt-3 text-center">
              Tableau des utilisateurs
            </p>
        </div>
    
    <div class="row  block my-5">
        <div class="col-3">
            <button class="button" role="button">
                <a class="" href="{{path('user_create_page')}}">
                    Créer un nouvel utilisateur
                </a>
            </button>
        </div>
    </div>

    <div class="row justify-content-center align-items-center block my-5">
        <table class="table table-hover">
            <thead class="">
                <tr class="" >
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Secteur</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <th scope="row">
                      {{ user.name | capitalize }}
                    </th>
                    <td >
                      {{ user.lastname | capitalize }}
                    </td>
                      {{ user.sector | capitalize }}
                    </td>
                    <td>
                        <a class="" href="{{path('user_details_page', {'id': user.id})}}">
                            <i class="fas fa-eye" title="Voir"></i>
                        </a>
                        <a class="" href="{{path('user_modify_page', {'id': user.id})}}">
                            <i class="fas fa-pen" title="Modifier"></i>
                        </a>
                        <a class="" href="{{path('user_delete_page', {'id': user.id})}}"
                        onclick="return confirm('Attention! Êtes-vous sûr de vouloir définitivement supprimer cet utilisateur?')">
                            <i class="fas fa-trash-alt" title="Supprimer"></i>
                        </a>
                    </td>
                   
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>




{% endblock %}
       
